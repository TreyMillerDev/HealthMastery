<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomePage">

    <TextView
        android:id="@+id/welcomeBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dummy"
        android:textStyle="bold"
        android:textSize="@dimen/hp_welcome_ts"
        android:layout_marginTop="@dimen/hp_welcome_margin"
        android:layout_marginLeft="@dimen/hp_welcome_margin"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/hp_welcome_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="5dp"
            android:textSize="16dp"
            android:text="Daily\nProgress"/>

        <ProgressBar
            android:id="@+id/PB_weekly"
            android:layout_width="match_parent"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:paddingRight="10dp"
            android:minHeight="20dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/weatherRs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/waterDrinking"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ListView
        android:id="@+id/userInfoDisplay"
        android:layout_width="402dp"
        android:layout_height="100dp"
        android:background="@android:color/white"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/hp_welcome_margin">

        <ImageView
            android:id="@+id/waterIcon"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:paddingRight="5dp"
            android:src="@drawable/waterglass"
            />
        <TextView
            android:id="@+id/waterDrinking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/hp_sg_txt"
            android:paddingTop="@dimen/hp_sg_pad"
            android:text="dummy"
            />

    </LinearLayout>

    <ListView
        android:id="@+id/workoutsListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:padding="8dp" />

    <ListView
        android:id="@+id/foodTEMP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:padding="8dp" />

</LinearLayout>

